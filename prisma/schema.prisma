generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL")
}

model Organizacao {
  id          String @id @default(uuid())
  nome        String
  organizacao String @unique
  email       String @unique
  cep         String
  estado      String @default("undefined")
  cidade      String @default("undefined")
  endereco    String
  whatsapp    String
  password    String
  pets        Pets[]

  @@map("organizacao")
}

model Pets {
  id                 String   @id @default(uuid())
  nome               String
  coverImage         String
  imagesUrl          String[]
  requisitosDoacao   String[]
  sobre              String
  idade              String
  porte              String
  nivelEnergia       String
  nivelIndependencia String
  ambiente           String
  gatoOuCachorro     String

  petId         Organizacao @relation(fields: [organizacaoId], references: [id])
  organizacaoId String

  @@map("pets")
}
