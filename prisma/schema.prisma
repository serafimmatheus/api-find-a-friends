generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL")
}

model Organizacao {
  id          String  @id @default(uuid())
  email       String  @unique
  cep         String
  endereco    String
  whatsapp    String
  password    String
  nome        String
  organizacao String  @unique
  cidade      String  @default("undefined")
  estado      String  @default("undefined")
  isActive    Boolean @default(false)
  pets        Pets[]

  @@map("organizacao")
}

model Pets {
  id                 String      @id @default(uuid())
  nome               String
  sobre              String
  idade              String
  porte              String
  nivelEnergia       String
  ambiente           String
  organizacaoId      String
  nivelIndependencia String
  gatoOuCachorro     String
  coverImage         String
  imagesUrl          String[]
  requisitosDoacao   String[]
  petId              Organizacao @relation(fields: [organizacaoId], references: [id])

  @@map("pets")
}
